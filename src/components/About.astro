<style>
	.about-content {
		max-width: 1000px;
		margin: 0 auto;
	}

	.about-text {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-tag {
		display: inline-block;
		background: var(--primary-light);
		color: var(--primary);
		padding: 0.5rem 1rem;
		border-radius: 20px;
		font-size: 0.875rem;
		font-weight: 600;
		margin-bottom: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		box-shadow: var(--shadow-sm);
		transition: all 0.3s ease;
	}

	.section-tag:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.about-text h2 {
		color: var(--neutral-800);
		margin-bottom: 1.5rem;
		font-size: 2.5rem;
		position: relative;
		display: inline-block;
	}

	.about-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: var(--primary);
		border-radius: 2px;
		transition: width 0.3s ease;
	}

	.about-text:hover h2::after {
		width: 100px;
	}

	.lead {
		font-size: 1.25rem;
		line-height: 1.8;
		color: var(--neutral-600);
		max-width: 800px;
		margin: 0 auto;
	}

	.values-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
		margin-top: 3rem;
	}

	.value-item {
		background: white;
		padding: 2.5rem;
		border-radius: 16px;
		box-shadow: var(--shadow-sm);
		transition: all 0.3s ease;
		border: 1px solid var(--neutral-200);
		position: relative;
		overflow: hidden;
	}

	.value-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, var(--primary-light) 0%, transparent 100%);
		opacity: 0;
		transition: opacity 0.3s ease;
		z-index: 0;
	}

	.value-item:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-lg);
		border-color: var(--primary-light);
	}

	.value-item:hover::before {
		opacity: 0.1;
	}

	.full-width {
		grid-column: 1 / -1;
	}

	.value-header {
		display: flex;
		align-items: center;
		gap: 1.25rem;
		margin-bottom: 1.5rem;
		position: relative;
		z-index: 1;
	}

	.icon {
		width: 3.5rem;
		height: 3.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--primary-light);
		border-radius: 12px;
		color: var(--primary);
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.icon::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: var(--primary);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.value-item:hover .icon {
		transform: rotate(5deg);
	}

	.value-item:hover .icon::before {
		opacity: 1;
	}

	.icon svg {
		position: relative;
		z-index: 1;
		transition: all 0.3s ease;
	}

	.value-item:hover .icon svg {
		color: white;
	}

	.value-item h3 {
		color: var(--neutral-800);
		font-size: 1.5rem;
		font-weight: 600;
		position: relative;
		z-index: 1;
	}

	.value-item p {
		color: var(--neutral-600);
		line-height: 1.7;
		font-size: 1.125rem;
		position: relative;
		z-index: 1;
	}

	.values-list {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		position: relative;
		z-index: 1;
	}

	.value-tag {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		background: var(--primary-light);
		color: var(--primary);
		padding: 0.75rem 1.25rem;
		border-radius: 12px;
		font-size: 1rem;
		font-weight: 500;
		transition: all 0.3s ease;
		cursor: pointer;
	}

	.value-tag:hover {
		background: var(--primary);
		color: white;
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.value-tag svg {
		transition: all 0.3s ease;
	}

	.value-tag:hover svg {
		transform: scale(1.1) rotate(5deg);
	}

	@media (max-width: 768px) {
		.values-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.value-item {
			padding: 2rem;
		}

		.about-text h2 {
			font-size: 2rem;
		}

		.lead {
			font-size: 1.125rem;
		}

		.values-list {
			justify-content: center;
		}
	}

	/* Animaciones */
	.animate-on-scroll {
		opacity: 0;
		transform: translateY(20px);
		transition: all 0.6s ease;
	}

	.animate-on-scroll.fade-in {
		opacity: 1;
		transform: translateY(0);
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>