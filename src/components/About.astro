<style>
	.section-tag {
		display: inline-block;
		background: var(--primary-light);
		color: var(--primary);
		padding: var(--space-2) var(--space-4);
		border-radius: var(--radius-full);
		font-size: 0.875rem;
		font-weight: 600;
		margin-bottom: var(--space-6);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		box-shadow: var(--shadow-sm);
		transition: all var(--transition-normal);
	}

	.section-tag:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.about-content {
		max-width: 1000px;
		margin: 0 auto;
	}

	.about-text h2 {
		position: relative;
		display: inline-block;
		margin-bottom: var(--space-6);
	}

	.about-text h2::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: var(--primary);
		border-radius: 2px;
		transition: width var(--transition-normal);
	}

	.about-text:hover h2::after {
		width: 100px;
	}

	.lead {
		font-size: 1.25rem;
		line-height: 1.7;
		color: var(--gray-600);
		max-width: 800px;
		margin: 0 auto;
		font-weight: 400;
	}

	.value-header {
		display: flex;
		align-items: center;
		gap: var(--space-4);
		margin-bottom: var(--space-6);
	}

	.icon {
		width: 3.5rem;
		height: 3.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--primary-light);
		border-radius: var(--radius-xl);
		color: var(--primary);
		transition: all var(--transition-normal);
		position: relative;
		overflow: hidden;
		flex-shrink: 0;
	}

	.icon::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: var(--primary);
		opacity: 0;
		transition: opacity var(--transition-normal);
	}

	.card:hover .icon {
		transform: rotate(5deg) scale(1.05);
	}

	.card:hover .icon::before {
		opacity: 1;
	}

	.icon svg {
		position: relative;
		z-index: 1;
		transition: all var(--transition-normal);
	}

	.card:hover .icon svg {
		color: white;
	}

	.values-grid {
		display: flex;
		flex-wrap: wrap;
		gap: var(--space-4);
		justify-content: center;
	}

	.value-tag {
		display: flex;
		align-items: center;
		gap: var(--space-2);
		background: var(--primary-light);
		color: var(--primary);
		padding: var(--space-3) var(--space-4);
		border-radius: var(--radius-xl);
		font-size: 0.95rem;
		font-weight: 500;
		transition: all var(--transition-normal);
		cursor: pointer;
		border: 1px solid transparent;
	}

	.value-tag:hover {
		background: var(--primary);
		color: white;
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
		border-color: var(--primary);
	}

	.value-tag svg {
		transition: all var(--transition-normal);
		flex-shrink: 0;
	}

	.value-tag:hover svg {
		transform: scale(1.1) rotate(5deg);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.grid-cols-2 {
			grid-template-columns: 1fr;
		}

		.values-grid {
			justify-content: flex-start;
		}

		.value-tag {
			flex: 1;
			min-width: calc(50% - var(--space-2));
			justify-content: center;
		}
	}

	@media (max-width: 480px) {
		.value-tag {
			min-width: 100%;
		}
	}

	/* Animaciones */
	.animate-on-scroll {
		opacity: 0;
		transform: translateY(20px);
		transition: all 0.6s ease;
	}

	.animate-on-scroll.fade-in {
		opacity: 1;
		transform: translateY(0);
	}
</style>