	}

	.cta-content {
		position: relative;
		z-index: 1;
	}

	.cta-content h3 {
		color: white;
		font-size: 1.75rem;
		font-weight: 700;
		margin-bottom: 0.75rem;
	}

	.cta-content p {
		color: rgba(255, 255, 255, 0.9);
		font-size: 1.125rem;
		margin-bottom: 2rem;
		max-width: 500px;
		margin-left: auto;
